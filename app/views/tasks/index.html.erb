<div class="page-container">

<h1>Task List</h1>

<section>
  <%= link_to "Add Task", new_task_path %>
</section>

<ul>
  <% @tasks.each do |task| %>
  <div class="list-container">
    <li>
      <%= task.action %>
    </li>
    <li>
      <%= task.completion_date %>
    </li>
    <li class="action-button">
      <%= link_to "Details", task_path(task.id) %>
    </li>
    <li class="action-button">
      <%= link_to "Edit", edit_task_path(task.id) %>
    </li>
    <li class="action-button">
      <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure you?" } %>
    </li>
    <li class="action-button">
      <% unless task.completed %>
        <%= link_to "Mark-Complete", complete_task_path(task.id), method: :patch   %>
      <% else %> 
        <%= link_to "Unmark-Complete", incomplete_task_path(task.id), method: :patch  %>
      <% end %>
    </li>

    <br />
  </div>
  <% end %>
</ul>

</div>


<footer>
  <p class="footer-text">
    copyright 2018
  </p>
</footer>
