<h1> Add New Task </h1>

<%= form_with model: @task do |f| %>

  <%= f.label :action %>
  <%= f.text_field :action %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Save Task", class: "task-button" %>

<% end %>
